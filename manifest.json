{
  "manifest_version": 3,
  "name": "Ad Click Guard",
  "version": "1.0.0",
  "description": "Protects users from accidental ad clicks on short-link websites",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Ad Click Guard"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["adDetection.js", "countdownWatcher.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_start"
    }
  ]
}